{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "allowJs": false,
        "esModuleInterop": true,
        "target": "ES2021",
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "sourceMap": false,
        "declaration": false,
        "paths": {
            "@/interactions/*": ["src/interactions/*"],
            "@/classes": ["src/classes"],
            "@/structures": ["src/classes/structures"],
            "@/types": ["src/types"],
        }
    },
    "include": [
        "src/**/*"
    ]
}
